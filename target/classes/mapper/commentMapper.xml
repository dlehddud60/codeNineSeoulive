<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.seoulive.board.course.mapper.commentMapper">

    <!-- 작성   -->
    <insert id="commInsert" parameterType = "org.zerock.seoulive.board.course.domain.commVO">
        insert into tbl_comment (seq, writer,content,write_date)
        values (#{seq}, #{writer}, #{content}, #{write_date})
    </insert>

    <!--조회-->
    <select id="commRead" resultType="org.zerock.seoulive.board.course.domain.commVO">
        select board_name, post_seq, seq, writer, content, write_date
        from tbl_comment
        where board_name= #{board_name} AND post_seq = #{post_seq}
    </select>

    <!-- 삭제 -->
    <delete id="commDelete" parameterType="org.zerock.seoulive.board.course.domain.commVO">
        delete from tbl_comment where seq = #{seq}
    </delete>

    <!-- 수정   -->
    <update id="commUpdate" parameterType="org.zerock.seoulive.board.course.domain.commVO">
        update tbl_comment
        set content = #{content},
        modify_date = sysdate
        where seq= #{seq}
    </update>
</mapper>
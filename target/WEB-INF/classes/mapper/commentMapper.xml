<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.seoulive.board.course.mapper.commentMapper">

    <insert id="commInsert">
        insert into tbl_comment (seq, writer,content)
        values (#{seq}, #{writer}, #{content})
    </insert>

    <!--board_name = 게시판, post_seq == 게시물 번호?? -->
    <select id="commRead" resultType="org.zerock.seoulive.board.course.domain.commVO">
        select *
        from tbl_comment
        where post_seq= #{seq} AND board_name = #{board_name}
    </select>

    <delete id="commDelete">
        delete from tbl_comment where seq = #{seq}
    </delete>

    <update id="commUpdate">
        update tbl_comment
        set content = #{content},
        modify_date = sysdate
        where seq= #{seq}
    </update>
</mapper>